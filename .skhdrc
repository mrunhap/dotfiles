# run terminal
hyper - return : kitty

# run emacs
hyper -e : emacs

# change focus
hyper - a : yabai -m window --focus west
hyper - s : yabai -m window --focus south
hyper - w : yabai -m window --focus north
hyper - d : yabai -m window --focus east

# shift window in current workspace
hyper - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
hyper - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
hyper - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
hyper - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# move focused window to next/prev workspace
hyper - 1 : yabai -m window --space 1
hyper - 2 : yabai -m window --space 2
hyper - 3 : yabai -m window --space 3
hyper - 4 : yabai -m window --space 4
hyper - 5 : yabai -m window --space 5
hyper - 6 : yabai -m window --space 6
hyper - 7 : yabai -m window --space 7
hyper - 8 : yabai -m window --space 8
hyper - 9 : yabai -m window --space 9
hyper - 0 : yabai -m window --space 10

# close focused window
hyper - q : yabai -m window --close

# enter fullscreen mode for the focused container
hyper - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
hyper - space : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2

# change layout of desktop
hyper - = : yabai -m space --layout bsp
hyper - t : yabai -m space --layout float

