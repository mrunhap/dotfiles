# -*- mode: gitconfig -*-
[core]
	excludesFile = ~/.gitignore
	pager = delta

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictStyle = diff3

# Detect moved blocks of code, also see:
# https://github.com/dandavison/delta#--color-moved-support
[diff]
	colorMoved = default

[push]
	default = current

[pull]
	rebase = true

[include]
	path = ~/.gitconfig.local
