# Use 'i3 -C -c ~/.config/i3/config'  to check this file after change

### i3 basic
set $mod Mod4
floating_modifier Mod4

### UI

#### Gaps
# Set inner/outer gaps
gaps inner 10
gaps outer 0
gaps top 0
gaps bottom 0

#### Window border
for_window [class   = "^.*"] border pixel 0
for_window [title   = "^.*"] border pixel 0

#### Window radius
# border_radius 10

### Key binding

#### Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

#### Mouse
# The right button toggles floating
bindsym --whole-window $mod+button2 floating toggle
focus_follows_mouse no

#### Shortcuts to launch applications
bindsym $mod+Return exec kitty
bindsym $mod+e exec emacs
bindsym $mod+shift+e exec emacsclient -nc

#### Lock screen
bindsym $mod+Control+l exec betterlockscreen -l dimblur

#### Application launcher
# The font, font-size and position should depond on your status bar.
bindsym $mod+d exec "dmenu_run -b -fn 'Iosevka Nerd-14'"

#### Take a screenshot
bindsym $mod+Shift+p exec "flameshot gui"

#### Workspace
bindsym $mod+< workspace prev
bindsym $mod+> workspace next

#### For i3
bindsym $mod+Shift+r restart
# bindsym $mod+Shift+c reload

# Toggle focus mode (floating or tiled)
# bindsym $mod+space focus mode_toggle

# Toggle between floating and tiling state
bindsym $mod+Shift+space floating toggle

# Kill the focused app
bindsym $mod+q kill

#### Resize windows
bindsym $mod+Control+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym t resize grow height 5 px or 5 ppt
        bindsym n resize shrink height 5 px or 5 ppt
        bindsym s resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

#### To shift focus
bindsym $mod+h focus left
bindsym $mod+t focus down
bindsym $mod+n focus up
bindsym $mod+s focus right

#### To move windows around
bindsym $mod+Shift+h move left
bindsym $mod+Shift+t move down
bindsym $mod+Shift+n move up
bindsym $mod+Shift+s move right

#### Split toggle
bindsym $mod+plus split toggle

#### Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

### Bar
bar {
   font pango:Iosevka Nerd Font 10
   position bottom
   status_command i3status-rs ~/.config/i3/status.toml
   colors {
       separator #666666
       background #222222
       statusline #dddddd
       focused_workspace #0088CC #0088CC #ffffff
       active_workspace #333333 #333333 #ffffff
       inactive_workspace #333333 #333333 #888888
       urgent_workspace #2f343a #900000 #ffffff
   }
}



### Workspace
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Open specific applications in floating (+ sticky) mode
#for_window [class = "rofi"] floating enable sticky enable

