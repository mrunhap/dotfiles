### Startup
# set dvorak keyboard layout
exec --no-startup-id setxkbmap us -v dvorak
#exec_always --no-startup-id xrdb -merge ~/.Xresources
#exec_always --no-startup-id xmodmap /home/liubo/.xmodmap
#exec_always --no-startup-id dropbox
exec --no-startup-id xset r rate 150 60
exec --no-startup-id "picom --experimental-backend"
exec_always --no-startup-id flameshot
exec --no-startup-id betterlockscreen -w dim
exec --no-startup-id dunst
exec --no-startup-id fcitx5 -d
