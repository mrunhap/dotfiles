### Applications

# app launcher
# bindsym $mod+d exec --no-startup-id "rofi -show drun"
bindsym $mod+d exec --no-startup-id dmenu_run -b -fn "JetBrainsMono Nerd Font:pixelsize=18"

# terminal
bindsym $mod+Return exec wezterm

# screen lock
bindsym $mod+l exec betterlockscreen -l dimblur

# screenshot
bindsym $mod+Shift+p exec "flameshot gui"

### Mouse
# The right button toggles floating
bindsym --whole-window $mod+button2 floating toggle
focus_follows_mouse no

### Functions

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show


### Startup
# exec_always will also run after i3 restarting
# --no-startup-id for application that don't need notify and cursor to watch

exec --no-startup-id xrdb -merge ~/.Xresources
# set key speed
exec --no-startup-id xset r rate 150 60
# for Chinese input method
exec --no-startup-id fcitx5 -d
# set wallpaper
exec_always --no-startup-id feh --bg-fill --randomize ~/.local/share/backgrounds/*
# update betterlockscreen cache
exec_always --no-startup-id betterlockscreen -u ~/.local/share/backgrounds/
# screenshot
exec --no-startup-id flameshot
# netwhorkmanager
exec --no-startup-id nm-applet
# translate
exec --no-startup-id crow
# Compositor
exec --no-startup-id picom

# set dvorak keyboard layout
exec_always --no-startup-id setxkbmap us -v dvorak # FIXME not work

